{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        // "prettier/@typescript-eslint",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      // "comma-dangle": ["error", "always-multiline"],
      "trailing-comma": false,
      "linebreak-style": 0,
      "no-param-reassign": 0,
      "import/extensions": 0,
      "no-console": 0,
      "prettier/prettier": "error",
      "class-methods-use-this": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
